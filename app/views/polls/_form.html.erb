<%= form_with(model: @response, remote: true, format: :json , local: true, id: 'add_poll') do |form| %>
      <% if @response.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</h2>
          <ul>
          <% @response.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <p>We are planning for <b><%= @event.event_type %></b> on date <b><%= @event.start_date.strftime("%A, %b %d") %></b>. Please fill your response before this date <b><%= @event.end_date.strftime("%A, %b %d") %></b></p>
      <div class="field">
        <%= form.label :vote, "Yes", :value => "true" %>
        <%= form.radio_button :vote, 'yes', :checked => true %>
        <%= form.label :vote, "No", :value => "false" %>
        <%= form.radio_button :vote, 'no'%>
      </div>
      <div class="actions">
        <%= form.submit 'submit', class: "btn btn-success"%>
      </div>
<% end %><%# End of form with%>