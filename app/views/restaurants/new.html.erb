<h3>Create Restaurant</h3>
<%= form_with(model: @restaurant, url: restaurants_path , local: true, class: 'center_align', multipart: true) do |form| %>
  <% if @restaurant.errors.any? %>
    <div class="alert alert-error">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-xs-2">
      <%= form.text_field :name, id: :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :attachment, class: 'col-sm-2 col-form-label' %>
    <div class="col-xs-2">
      <%= form.file_field :attachment, id: :attachment %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-2">
      <%= form.submit 'submit', class: "btn btn-success"%>
    </div>
  </div>
<% end %>
