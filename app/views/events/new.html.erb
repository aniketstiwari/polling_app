<% if @event.new_record? %>
  <h3>Create Event</h3>
  <%= form_with(model: @event, url: events_path , local: true, class: 'center_align') do |form| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group row">
      <%= form.label :event_type, class: 'col-sm-2 col-form-label' %>
      <div class="col-xs-2">
        <%= form.text_field :event_type, id: :event_type, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :start_date, class: 'col-sm-2 col-form-label' %>
      <div class="col-xs-2">
        <%= datepicker_input form, :start_date %>
      </div>
    </div>
     <div class="form-group row">
      <%= form.label :end_date, class: 'col-sm-2 col-form-label' %>
      <div class="col-xs-2">
        <%= datepicker_input form, :end_date %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-2">
        <%= form.submit 'submit', class: "btn btn-success"%>
      </div>
    </div>
  <% end %>
<% else %>
 <p>Event has been created successfully. Wait for all the users response</p>
<% end %>