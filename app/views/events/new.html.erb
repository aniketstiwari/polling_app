<% if event.new_record? %>
  <%= form_with(model: event, url: events_path , local: true) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group row">
      <div class="col-xs-2">
  	    <%= form.label :event_type %>
  	    <%= form.text_field :event_type, id: :event_type, class: "form-control" %>
   		</div>
  	  <div class="col-xs-2">
  	    <%= form.label :start_date %>
  	    <%= datepicker_input form, :start_date %>
  	  </div>
  	  <div class="col-xs-2">
  	    <%= form.label :end_date %>
  	    <%= datepicker_input form, :end_date %>
  	  </div>
    </div>
    <div class="actions">
      <%= form.submit 'submit', class: "btn btn-success"%>
    </div>
  <% end %>
<% else %>
 <p>Event has been created successfully. Wait for all the users response</p>
<% end %>